{
  "system": {
    "name": "CourseKit MCP Server",
    "version": "0.2.0",
    "configVersion": "1.0.0"
  },
  "paths": {
    "coursekit": ".coursekit",
    "templates": "templates",
    "output": ".coursekit/implementations"
  },
  "defaults": {
    "format": "markdown",
    "theme": "default",
    "quality": "production"
  },
  "security": {
    "validateInputs": true,
    "sanitizePaths": true,
    "maxFileSize": 10485760,
    "allowedFileTypes": [".md", ".json", ".js", ".html", ".css"]
  },
  "logging": {
    "level": "info",
    "sensitiveFields": ["apiKey", "token", "secret", "password"],
    "logToFile": false
  },
  "providers": {
    "enabled": true,
    "timeout": 30000,
    "retries": 2,
    "fallbackEnabled": true
  }
}
